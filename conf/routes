# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)

GET     /getPlayerById/:_id                 controllers.PlayerManagerController.getPlayerById(_id:String)
GET     /getBalance/:_id                    controllers.PlayerManagerController.getBalanceById(_id:String)

POST    /addNewPlayer                       controllers.PlayerManagerController.addNewPlayer

POST    /deletePlayerById/:_id              controllers.PlayerManagerController.deletePlayerById(_id:String)

POST    /updatePlayerName/:_id/:name        controllers.PlayerManagerController.updatePlayerName(_id:String,name:String)

POST    /increaseValue/:id/:increase        controllers.PlayerManagerController.increaseValue(id:String, increase:Int)
POST    /decreaseValue/:id/:value           controllers.PlayerManagerController.decreaseValue(id:String, value:Int)

