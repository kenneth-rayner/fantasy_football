# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                     controllers.Assets.versioned(path="/public", file: Asset)

GET     /player/:name                     controllers.PlayerManagerController.getPlayer(name:String)

POST    /postPlayer                       controllers.PlayerManagerController.postNewPlayer
POST    /deletePlayer                     controllers.PlayerManagerController.deletePlayer
POST    /deletePlayerByName/:name         controllers.PlayerManagerController.deletePlayerByName(name:String)
POST    /updatePlayerByName/:name         controllers.PlayerManagerController.updatePlayerByName(name:String)
POST    /updateName/:name/:newName        controllers.PlayerManagerController.updateName(name:String,newName:String)
POST    /updateValue/:name/:newValue      controllers.PlayerManagerController.updateValue(name:String,newValue:Int)
POST    /addValue/:name/:increase         controllers.PlayerManagerController.increaseValue(name:String, increase:Int)
POST    /decreaseValue/:name/:decrease    controllers.PlayerManagerController.decreaseValue(name:String, decrease:Int)