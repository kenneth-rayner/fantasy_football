# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)

GET     /getPlayerById/:_id                 controllers.PlayerManagerController.getPlayerById(_id:String)

POST    /postPlayer                         controllers.PlayerManagerController.postNewPlayer

POST    /deletePlayerBody                   controllers.PlayerManagerController.deletePlayerByBody
POST    /deletePlayerById/:_id              controllers.PlayerManagerController.deletePlayerById(_id:String)
POST    /deletePlayerByName/:name           controllers.PlayerManagerController.deletePlayerByName(name:String)

POST    /updatePlayerName/:_id/:name        controllers.PlayerManagerController.updatePlayerName(_id:String,name:String)
POST    /updateValue/:id/:newValue          controllers.PlayerManagerController.updateValue(id:String,newValue:Int)
POST    /increaseValue/:id/:increase        controllers.PlayerManagerController.increaseValue(id:String, increase:Int)
POST    /decreaseValue/:id/:decrease        controllers.PlayerManagerController.decreaseValue(id:String, decrease:Int)
